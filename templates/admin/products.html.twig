{% extends 'adminTemplate.html.twig' %}

{% block title %}Hello DecorationWebsiteController!{% endblock %}

{% block body %}

<div class="row">
    <div class="col-md-auto">
    
    <h1> Les Produits </h1>

        <section class="products">

            {% if products is defined %}
            {% for product in products %}
            <p>
                {# id : la variable vient de la route @Route("/admin/productForm/{id}/{type}", name="productForm") #}
                {{ product.title }}
                <a href= {{ path('productForm', {id : product.id, type : 'product'}) }}> <i class="fas fa-edit"></i> </a>
                <a href= {{ path('deleteProduct', {id : product.id}) }}> Supprimer le produit</a>
                {# <a href= {{ path('deleteProduct', {id : product.id}) }}> Delete </a> #}
            </p>
            {% endfor %}
            {% endif %}
        </section>
    </div>
</div>

{% endblock %} 
