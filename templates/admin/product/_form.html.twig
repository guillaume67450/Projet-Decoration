{% extends 'admin/base.html.twig' %}

{% block title %}Produit
{% endblock %}

{% block body %}
	<div class="container-fluid h-100 my-4">
		<div class="row h-100">
			{% include 'admin/partials/aside.html.twig' %}
			<main class="col">
				<!-- InsÃ©rez ici le contenu principal du site ou de l'application -->
				<div class="container">
					<div class="row">
						<div class="col-md-auto">
							{% if product.title != '' %}
								<h3>Edition du produit</h3>
							{% else %}
								<h3>Ajout du produit</h3>
							{% endif %}
							{{ form_start(form) }}
							{{ form_row(form.Title) }}
							{{ form_row(form.Brand) }}
							{{ form_row(form.Description) }}
							{{ form_row(form.Price) }}
							{{ form_row(form.URLaffiliation) }}
							{{ form_row(form.Image) }}
							{{ form_row(form.Gallery) }}
							{{ form_row(form.Category) }}
							<button type="submit">save</button>
							{{ form_end(form) }}
						</div>
					</div>
				</div>
			</main>
		</div>
	</div>
{% endblock %}
