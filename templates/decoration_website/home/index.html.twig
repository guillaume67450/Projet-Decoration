{% extends 'base.html.twig' %}

{% block title %}
	DecorationWebsite home
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.7.0/animate.min.css">
{% endblock %}

{% block body %}
	<main class="col">
		<!-- Insérez ici le contenu principal du site ou de l'application -->
		<!--Main layout-->
			<div class="container"> <div
				class="row">

				<!--Sidebar-->
				<div class="col-lg-4 wow fadeIn" data-wow-delay="0.2s">

					<div class="widget-wrapper">
						<h4>Catégories :</h4>
						<br>
						<div class="list-group">

							{% for category in categories if category.parent is null %}
									<h4 class="pt-3"><a class="list-group-item" href="{{ path('decoration_website_subcategories', {'id_category': category.id}) }}">{{ category.name }}</a></h4>
								{% for subcategory in subcategories if subcategory.parent is defined %}
									{% if (category.id == subcategory.parent.id) %} 
									<a class="list-group-item pl-5" href="{{ path('decoration_website_products', {'id_category' : subcategory.parent.id, 'id_sub_category' : subcategory.id }) }}">{{ subcategory.name }}
									</a>
									{% endif %}
								{% endfor %}
							{% endfor %}
						</div>
					</div>

					<div class="widget-wrapper wow fadeIn" data-wow-delay="0.4s">
						<h4 class="text-center">Formulaire de souscription :</h4>
						<br>
						<div class="card">
							<div class="card-block">
								<p  class="text-center">
									<strong>Souscrivez à notre bulletin hebdmadaire</strong>
								</p>
								<p class="text-center">Une fois par mois nous vous enverrons un récapitulatif des promotions et des actualités</p>

								<div class="text-center">
									<button class="btn btn-primary">Je veux recevoir la newsletter</button>
								</div>
							</div>
						</div>
					</div>

				</div>
				<!--/.Sidebar-->

				<!--Main column-->
				<div
					class="col-lg-8">

					<!--First row-->
					<div class="row wow fadeIn" data-wow-delay="0.4s">
						<div class="col-lg-12">
							<div class="divider-new">
								<h2 class="h2-responsive">Les nouvelles</h2>
							</div>


							<!--Carousel Wrapper-->
							<div
								id="carousel-example-1z" class="carousel slide carousel-fade" data-ride="carousel">
								<!--Indicators-->
								<ol class="carousel-indicators">
									<li data-target="#carousel-example-1z" data-slide-to="0" class="active"></li>
									<li data-target="#carousel-example-1z" data-slide-to="1"></li>
									<li data-target="#carousel-example-1z" data-slide-to="2"></li>
								</ol>
								<!--/.Indicators-->
								<!--Slides-->
								<div
									class="carousel-inner" role="listbox">
									<!--First slide-->
									<div class="carousel-item active">
										<img src="https://s3-eu-west-1.amazonaws.com/sc-files.pjms.fr/p/pjms/274/000/421/673/c7789181f74d4e008bc472b28803fd07.jpg" alt="First slide">
										<div class="carousel-caption">
											<h4>Nouvelle collection</h4>
											<br>
										</div>
									</div>
									<!--/First slide-->
									<!--Second slide-->
									<div class="carousel-item">
										<img src="https://s3-eu-west-1.amazonaws.com/sc-files.pjms.fr/p/pjms/274/000/421/673/0c8cfa956bfc41498268c23f7815bf64.jpg" alt="Second slide">
										<div class="carousel-caption">
											<h4>Obtenez une réduction !</h4>
											<br>
										</div>
									</div>
									<!--/Second slide-->
									<!--Third slide-->
									<div class="carousel-item">
										<img src="https://s3-eu-west-1.amazonaws.com/sc-files.pjms.fr/p/pjms/274/000/421/673/2a88174d4070444e9e6b587b64a7d344.jpg" alt="Third slide">
										<div class="carousel-caption">
											<h4>A partir de 20€</h4>
											<br>
										</div>
									</div>
									<!--/Third slide-->
								</div>
								<!--/.Slides-->
								<!--Controls-->
								<a class="carousel-control-prev" href="#carousel-example-1z" role="button" data-slide="prev">
									<span class="carousel-control-prev-icon" aria-hidden="true"></span>
									<span class="sr-only">Précédent</span>
								</a>
								<a class="carousel-control-next" href="#carousel-example-1z" role="button" data-slide="next">
									<span class="carousel-control-next-icon" aria-hidden="true"></span>
									<span class="sr-only">Suivant</span>
								</a>
								<!--/.Controls-->
							</div>
							<!--/.Carousel Wrapper-->
						</div>
					</div>
					<!--/.First row-->
					<br>
					<hr
					class="extra-margins">

					<!--Second row-->
					<div
						class="row">
						<!--First columnn-->
						<div
							class="col-lg-4">
							<!--Card-->
							<div
								class="card  wow fadeIn" data-wow-delay="0.2s">

								<!--Card image-->
								<div class="view overlay hm-white-slight">
									<img src="/uploads/section_meubles.jpg" class="img-fluid" alt="">
									<a href="#">
										<div class="mask"></div>
									</a>
								</div>
								<!--/.Card image-->

								<!--Card content-->
								<div
									class="card-block">
									<!--Title-->
									<h4 class="card-title">Meubles</h4>
									<!--Text-->
									<p class="card-text">Les meubles tendance</p>
									<a href="#" class="btn btn-default">A partir de
										<strong>20€</strong>
									</a>
								</div>
								<!--/.Card content-->

							</div>
							<!--/.Card-->
						</div>
						<!--First columnn-->

						<!--Second columnn-->
						<div
							class="col-lg-4">
							<!--Card-->
							<div
								class="card  wow fadeIn" data-wow-delay="0.4s">

								<!--Card image-->
								<div class="view overlay hm-white-slight">
									<img src="https://s3-eu-west-1.amazonaws.com/sc-files.pjms.fr/p/pjms/274/000/421/673/0c8cfa956bfc41498268c23f7815bf64.jpg" class="img-fluid" alt="">
									<a href="#">
										<div class="mask"></div>
									</a>
								</div>
								<!--/.Card image-->

								<!--Card content-->
								<div
									class="card-block">
									<!--Title-->
									<h4 class="card-title">Luminaires</h4>
									<!--Text-->
									<p class="card-text">Nos plus beaux luminaires
									</p>
									<a href="#" class="btn btn-default">A partir de
										<strong>10€</strong>
									</a>
								</div>
								<!--/.Card content-->

							</div>
							<!--/.Card-->
						</div>
						<!--Second columnn-->

						<!--Third columnn-->
						<div
							class="col-lg-4">
							<!--Card-->
							<div
								class="card  wow fadeIn" data-wow-delay="0.6s">

								<!--Card image-->
								<div class="view overlay hm-white-slight">
									<img src="https://s3-eu-west-1.amazonaws.com/sc-files.pjms.fr/p/pjms/274/000/421/673/2a88174d4070444e9e6b587b64a7d344.jpg" class="img-fluid" alt="">
									<a href="#">
										<div class="mask"></div>
									</a>
								</div>
								<!--/.Card image-->

								<!--Card content-->
								<div
									class="card-block">
									<!--Title-->
									<h4 class="card-title">Canapés</h4>
									<!--Text-->
									<p class="card-text">Les plus beaux canapés</p>
									<a href="#" class="btn btn-default">A partir de
										<strong>100€</strong>
									</a>
								</div>
								<!--/.Card content-->

							</div>
							<!--/.Card-->
						</div>
						<!--Third columnn-->
					</div>
					<!--/.Second row-->

				</div>
				<!--/.Main column-->

			</div>
		</div>
		<!--/.Main layout-->

	</main>

	<hr class="extra-margins">
	<h1 class="text-center">Sélection de Produits</h1>

	<div id="columns" class="columns_4">
		{% for product in pagination.data|slice(0, 30) %}
			<figure>
				<img src="{{ product.image }}" alt="{{ product.title }}">
				<figcaption>{{ product.title }}</figcaption>
				<span class="price">{{ product.price }}
					€</span>
				<a href="{{ path('cart_add', {'id': product.id}) }}" class="btn btn-success float-right">
					<i class="fas fa-shopping-cart mr-1"></i>
					Ajouter
				</a>
			</figure>
		{% endfor %}
	</div>

	{{ pagination.display() }}

{% endblock %}
{% block javascripts %}
	{{ parent() }}
{% endblock %}
