{% extends 'baseblog.html.twig' %}

{% block title %}Article index
{% endblock %}

{% block body %}

	{% include 'decoration_website/article/blognavbar.html.twig' %}

	<div class="wrap">
	<h1> Le BLOG des nouveautés </h1>

		{% for article in articles %}
			<div class="blog">
				<div class="conteudo">
					<div class="post-info">
						Posted by
						{{ article.user.username }}
					</div>
					<img src="{{ article.featuredImage }}" alt="{{ article.slug }}">
					<h1>
						{{ article.title }}
					</h1>
					<hr>
					{{ article.content | raw }}
					<a href="{{ path('article_show', {'slug': article.slug}) }}" class="continue-lendo">Voir l'article et commenter →</a>
				</div>
			</div>
		{% endfor %}

		<a href="{{ path('article_new') }}">Créer un nouvel article</a>


	</div>


{% endblock %}
