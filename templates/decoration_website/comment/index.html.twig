{% extends 'base.html.twig' %}

{% block title %}Comment index
{% endblock %}

{% block body %}
	<h1>Comment index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Content</th>
				<th>Active</th>
				<th>Created_at</th>
				<th>Rgpd</th>
				<th>Nom de l'utilisateur</th>
                <th>Article (id)</th>
                <th>Article (slug)</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for comment in comments %}
				<tr>
					<td>{{ comment.id }}</td>
					<td>{{ comment.content }}</td>
					<td>{{ comment.active ? 'Yes' : 'No' }}</td>
					<td>{{ comment.createdAt ? comment.createdAt|date('Y-m-d H:i:s') : '' }}</td>
					<td>{{ comment.rgpd ? 'Yes' : 'No' }}</td>
					<td>
						{{ comment.user.username }}
                    </td>
                    <td>
                        {{ comment.article.id }}
                    </td>
					<td>
						{{ comment.article.slug }}
					</td>
					<td>
						<a href="{{ path('comment_show', {'id': comment.id}) }}">show</a>
						<a href="{{ path('comment_edit', {'id': comment.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="6">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
    
{% endblock %}
